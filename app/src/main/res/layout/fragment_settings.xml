<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.dashboard.profile.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_logout" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Basic Settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableStart="@drawable/ic_notifications"
            android:drawableLeft="@drawable/ic_notifications"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:drawablePadding="15dp"
            android:gravity="start|center"
            android:text="Notifications"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Default Uniit of Measure"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Themes"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Security"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Permissions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Camera"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Location"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Storage"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Feedback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Bug Report"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="App Review"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Legal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Privacy Policy"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Terms of Service"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="About" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Mission Statement"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="start|center"
            android:text="Version"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>