<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.dashboard.profile.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/chat_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_nav_arrow_back"
            app:title="Details" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:text="Mute Messages"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Shared Media" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_wildlife" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:text="Members" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_detail_members_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:text="Restrict"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:text="Report..."
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:text="Block"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:text="Delete Conversation"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>