<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_total_dives"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="123\nTotal Dives" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_max_depth"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="126ft(38.4m)\nMax Depth" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_bottom_time"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="10hrs 35m\nBottom Time" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_countries"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="4\nCountries" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_dive_time"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="72m\nMax Dive Time" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_air_consumptions"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="Average Air Consumption" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_certifications"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="5\nCertifications" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stats_wildlife_seen"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="32\nWildlife seen" />

    </GridLayout>
</androidx.core.widget.NestedScrollView>
