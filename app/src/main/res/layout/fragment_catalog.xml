<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.catalog.CatalogFragment">

    <HorizontalScrollView
        android:id="@+id/agency_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/agency_filters"
            android:padding="15dp"
            android:background="@android:color/transparent"
            app:singleSelection="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:checkedChip="@+id/chip_padi"
            app:chipSpacingHorizontal="25dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_padi"
                android:layout_width="75dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PADI"
                android:textAlignment="center"
                app:chipCornerRadius="5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:gravity="center"
                android:text="SDI"
                android:textAlignment="center"
                app:chipCornerRadius="5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:gravity="center"
                android:text="SSI"
                android:textAlignment="center"
                app:chipCornerRadius="5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:gravity="center"
                android:text="TDI"
                android:textAlignment="center"
                app:chipCornerRadius="5dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ERDI"
                android:textAlignment="center"
                app:chipCornerRadius="5dp" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/text_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cert_path_level_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agency_filter_container"
        tools:listitem="@layout/item_cert_level" />
</androidx.constraintlayout.widget.ConstraintLayout>